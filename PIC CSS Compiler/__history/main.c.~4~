#include <main.h>
#include <lcd.c>

#use standard_io(a)
#use standard_io(c)

void main()
{
   lcd_init();
   set_tris_a(0b111111);
   set_tris_b(0b00000000);
   int steps[8]={0b00000001,0b00000011,0b00000010,0b00000110,0b00000100,0b00001100,0b00001000,0b00001001};
   
   
   while(TRUE)
   {
      if (input(PIN_A0)==1)
      {
         lcd_gotoxt(1,1);
         printf(lcd_putc,"Motor encendido");
         lcd_gotoxt(1,2);
         printf(lcd_putc,"Giro a la derecha");
         
         for (int i=0; i<8; i++){
            output_c(steps[i]);
            delay_ms(500);
         }
      }
      else if (input(PIN_A1)==1)
      {
         lcd_gotoxt(1,1);
         printf(lcd_putc,"Motor encendido");
         lcd_gotoxt(1,2);
         printf(lcd_putc,"Giro a la izquierda");
         
         for (int j=8; j>=1; j--){
            output_c(steps[j]);
            delay_ms(500);
         }
      } 
      else
      {
         lcd_gotoxt(1,1);
         printf(lcd_putc,"\fMotor encendido");
         delay_ms(200);
      }
      
      //TODO: User Code
   }

}
